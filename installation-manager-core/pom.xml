                                            <replacetoken>installation-manager.update_server_endpoint=https://codenvy.com/update</replacetoken>
                                            <replacevalue>installation-manager.update_server_endpoint=http://updater-nightly.codenvy-dev.com/update</replacevalue>
                                        </replace>
                                        <replace file="${project.build.directory}/classes/codenvy/installation-manager.properties">
                                            <replacetoken>saas.api.endpoint=https://codenvy.com/api</replacetoken>
                                            <replacevalue>saas.api.endpoint=https://nightly.codenvy-stg.com/api</replacevalue>
                                        </replace>
                                        <tstamp>
                                            <format offset="1" pattern="MM/dd/yyyy hh:mm aa" property="touch.time" unit="minute" />
                                        </tstamp>
                                        <touch datetime="${touch.time}">
